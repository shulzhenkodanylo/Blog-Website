<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Blog</title>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="/scripts/homePage.js"></script>
</head>
<body>
    <h1>Blog Task 4</h1>
    <div class="blog_body">
        {% for post in posts  %}
            <div class="post_container">
                <img src="/img/uploads/{{ post.getImg() }}" alt="Post Image" class="post_img">
                <h2 class="post_title">{{ post.getTitle() }}</h2>
                <p class="post_content">{{ post.getContent() }}</p>
                <p class="post_date">{{ post.getDate()|date('Y-m-d') }}</p>
                <p class="post_author">by {{ post.getAuthor() }}</p>
            </div>
        {% endfor %}

   </div>
