    <button type="button" class="open_button" onclick="openNewPostForm()">Add new Post</button>

    <div class="new_post_form_popup" id="new_post_form">
        <form action="" method="post" class="new_post_form_container" enctype="multipart/form-data">
            <h3>Add Post</h3>

            <label for="author">Add your Name</label>
            <br>
            <input type="text" name="author" id="author" placeholder="Enter Name" required>
            <br>

            <label for="title">Add Title</label>
            <br>
            <input type="text" name="title" id="title" placeholder="Enter Title" required>
            <br>

            <label for="content">Add Text</label>
            <br>
            <textarea name="content" id="content" placeholder="Enter text" required></textarea>
            <br>

            <label for="img">Upload image</label>
            <br>
            <input type="file" name="img" id="img">
            <br>

            <button type="submit" class="btn">Submit</button>
            <button type="button" class="btn_cancel" onclick="closeNewPostForm()">Close</button>
        </form>
    </div>
</body>
</html>
